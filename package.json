{
  "name": "kognitiva-fullstack",
  "version": "1.0.0",
  "description": "Plataforma Kognitiva (Fullstack)",
  "private": true,
  "scripts": {
    
    "start": "NODE_ENV=production node backend/src/index.js",
    "dev:backend": "nodemon backend/src/index.js",
    "test:backend": "cd backend && jest",
    "test:integration": "cd backend && jest --runInBand",  
    
    
    "dev:frontend": "vite frontend",
    "build:frontend": "vite build frontend",
    "preview:frontend": "vite preview frontend",
    "test:frontend": "jest frontend",  // Testes do frontend

    
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "npm run build:frontend"
  },
  "dependencies": {
    // Backend
    "express": "^5.0.0",  
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.6.7",
    "dotenv-safe": "^8.2.0"
  },
  "devDependencies": {
    // Backend
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    
    // Frontend
    "vite": "^5.0.0",
    "dompurify": "^3.0.5",
    
    // Ferramentas
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
